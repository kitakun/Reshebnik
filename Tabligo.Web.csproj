<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <LangVersion>13</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <InvariantGlobalization>true</InvariantGlobalization>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <PublishAot>false</PublishAot>
        <EnableNativeAOT>false</EnableNativeAOT>
        <IsAotCompatible>false</IsAotCompatible>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

        <!-- For Blazor/Android/WASM setups -->
        <RunAOTCompilation>false</RunAOTCompilation>
    </PropertyGroup>

    <ItemGroup>
      <Compile Remove="Tabligo.EntityFramework\**" />
      <Compile Remove="Tabligo.Domain\**" />
      <Compile Remove="Tabligo.Handlers\**" />
      <Compile Remove="Tabligo.Clickhouse\**" />
      <Compile Remove="Tabligo.GPT\**" />
      <Compile Remove="Tabligo.SberGPT\**" />
      <Compile Remove="Tabligo.Neural\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="Tabligo.EntityFramework\**" />
      <EmbeddedResource Remove="Tabligo.Domain\**" />
      <EmbeddedResource Remove="Tabligo.Handlers\**" />
      <EmbeddedResource Remove="Tabligo.Clickhouse\**" />
      <EmbeddedResource Remove="Tabligo.GPT\**" />
      <EmbeddedResource Remove="Tabligo.SberGPT\**" />
      <EmbeddedResource Remove="Tabligo.Neural\**" />
    </ItemGroup>

    <ItemGroup>
      <Content Remove="Tabligo.EntityFramework\**" />
      <Content Remove="Tabligo.Domain\**" />
      <Content Remove="Tabligo.Handlers\**" />
      <Content Remove="Tabligo.Clickhouse\**" />
      <Content Update="appsettings.Production.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Remove="Tabligo.GPT\**" />
      <Content Remove="Tabligo.SberGPT\**" />
      <Content Remove="Tabligo.Neural\**" /> 
    </ItemGroup>

    <ItemGroup>
      <None Remove="Tabligo.EntityFramework\**" />
      <None Remove="Tabligo.Domain\**" />
      <None Remove="Tabligo.Handlers\**" />
      <None Remove="Tabligo.Clickhouse\**" />
      <None Remove="Tabligo.GPT\**" />
      <None Remove="Tabligo.SberGPT\**" />
      <None Remove="Tabligo.Neural\**" />
    </ItemGroup>

