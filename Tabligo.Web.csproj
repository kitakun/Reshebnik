      <_ContentIncludedByDefault Remove="Tabligo.Handlers\obj\project.packagespec.json" />
      <_ContentIncludedByDefault Remove="Tabligo.Handlers\obj\Tabligo.Handlers.csproj.nuget.dgspec.json" />
      <_ContentIncludedByDefault Remove="Tabligo.Clickhouse\obj\project.assets.json" />
      <_ContentIncludedByDefault Remove="Tabligo.Clickhouse\obj\project.packagespec.json" />
      <_ContentIncludedByDefault Remove="Tabligo.Clickhouse\obj\Tabligo.Clickhouse.csproj.nuget.dgspec.json" />
      <_ContentIncludedByDefault Remove="Tabligo.GPT\obj\Debug\net9.0\Tabligo.GPT.sourcelink.json" />
      <_ContentIncludedByDefault Remove="Tabligo.GPT\obj\project.assets.json" />
      <_ContentIncludedByDefault Remove="Tabligo.GPT\obj\project.packagespec.json" />
